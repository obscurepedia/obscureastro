---
import { marked } from 'marked';
import "../styles/global.css";

// ‚úÖ Fetch the most recent Facebook post URL for this blog post
const postId = Astro.props.post?.data?.id || null;
console.log("üìå Debug: Astro.props.post:", Astro.props.post);
let facebook_post_url = null; // Initialize variable

// ‚úÖ Use an async function to fetch the Facebook post URL via the API
async function fetchFacebookPostUrl() {
  if (postId) {
    try {
      const response = await fetch(`/api/get_facebook_post_url?generated_post_id=${postId}`);
      const data = await response.json();
      if (data.article_url) {
        facebook_post_url = data.article_url;
        console.log("üìå Debug: Facebook Post URL:", facebook_post_url);
      } else {
        console.warn("‚ö†Ô∏è Warning: Facebook post URL not found.");
      }
    } catch (error) {
      console.error("‚ùå Error fetching Facebook Post URL:", error);
    }
  } else {
    console.warn("‚ö†Ô∏è Warning: postId is undefined. Facebook post URL will not be fetched.");
  }
}

await fetchFacebookPostUrl(); // ‚úÖ Execute the function

const post = Astro.props.post;
const postHTML = post.body ? marked(post.body) : "";
---

<html>
  <head>
    <title>{post.data.title}</title>
    <meta name="description" content={post.data.excerpt || "An article from Obscurepedia"} />
  </head>
  <body class="post-page">
    <header>
      <img src="/logo1.png" alt="Obscurepedia Logo" width="350">
      <nav>
        <ul>
          <li><a href="/">Home</a></li>
          <li><a href="/posts">Posts</a></li>
          <li><a href="/categories">Categories</a></li>
        </ul>
      </nav>
    </header>

    <article class="post-container">
      <h1 class="post-title">{post.data.title}</h1>
      <p class="post-date">Published on: {new Date(post.data.date).toLocaleDateString()}</p>

      {post.data.featured_image && (
        <img src={post.data.featured_image} alt={post.data.title} class="featured-image" />
      )}

      <div class="post-content" set:html={postHTML}></div>

      {/* ‚úÖ Use Astro's conditional rendering syntax */}
      {facebook_post_url && (
        <div class="facebook-comment-section">
          <p>üí¨ Join the discussion on Facebook:</p>
          <a href={facebook_post_url} target="_blank" rel="noopener noreferrer" class="facebook-btn">
            Comment on Facebook
          </a>
        </div>
      )}
      
    </article>

    <!-- ‚úÖ Added Footer Here Without Changing Layout -->
    <footer>
      <nav>
        <ul>
          <li><a href="/privacy-policy/">Privacy Policy</a></li>
          <li><a href="/terms-of-service/">Terms of Service</a></li>
        </ul>
      </nav>
    </footer>
  </body>
</html>
