---
import PostLayout from "../../layouts/Post.astro";
import { getCollection } from 'astro:content';
import { getDatabasePostId } from '../../lib/database';

// âœ… Fetch all blog posts
export async function getStaticPaths() {
  const posts = await getCollection('posts');
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

// âœ… Pass post data to the layout
const { post } = Astro.props;

// âœ… Extract filename from post ID (remove `.md`)
const postFilename = post.id.replace('.md', ''); 

// âœ… Get the correct postId from the database using the filename
const postId = await getDatabasePostId(postFilename);

if (!postId) {
  console.warn("âš ï¸ Warning: Could not find postId for filename:", postFilename);
}

// âœ… Debugging log
console.log("ğŸ“Œ Debug: Retrieved postId from database:", postId);

// âœ… Fetch Facebook post URL based on the retrieved postId
const article_url = postId ? `/api/get_recent_facebook_post?post_id=${postId}` : null;
---

<PostLayout post={post} />

{article_url && (
  <div style="text-align: center; margin-top: 40px;">
    <h3>Join the Discussion!</h3>
    <p>Drop your thoughts in the comments below and let's discuss the future of human longevity! ğŸš€ğŸ”¬ğŸ’¬</p>

    <div id="fb-root"></div>
    <script async defer crossorigin="anonymous"
      src="https://connect.facebook.net/en_US/sdk.js#xfbml=1&version=v12.0">
    </script>

    <div class="fb-comments" 
         data-href={article_url} 
         data-width="100%" 
         data-numposts="5">
    </div>
  </div>
)}
